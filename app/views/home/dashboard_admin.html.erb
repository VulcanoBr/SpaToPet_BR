<div class="w-full lg:w-10/12 mx-auto p-5 mt-3 rounded shadow-xl border">
 
  <div class="px-6 py-10 rounded-t-xl bg-gray-50">
    <h1 class="text-3xl font-extrabold text-center"><%= current_user.first_name %>'s <%= t('dashboard_admin') %></h1>
    <p class="text-center text-gray-600 mt-2"><%= t('description_admin') %> </p>
  </div>

  <div class="my-5 flex justify-between items-center gap-5">
    <div class="flex flex-col sm:flex-row gap-5 items-center justify-between">
      <%= link_to "My Cities", cities_path, class: "rounded-lg py-3 px-5 bg-blue-400 text-white block font-bold" %>
      <%= link_to "New City", new_city_path, class: "rounded-lg py-3 px-5 bg-blue-400 text-white block font-bold" %>
    </div>

    <div class="flex flex-col sm:flex-row gap-5 items-center justify-between">
      <%= link_to "My Locals", locals_path, class: "rounded-lg py-3 px-5 bg-blue-400 text-white block font-bold" %>
      <%= link_to "New Local", new_local_path, class: "rounded-lg py-3 px-5 bg-blue-400 text-white block font-bold" %>
    </div>

    <div class="flex flex-col sm:flex-row gap-5 items-center justify-between">
      <%= link_to "My Appointment Types", appointment_types_path, class: "rounded-lg py-3 px-5 bg-blue-400 text-white block font-bold w-max" %>
      <%= link_to "New Appointment Type", new_appointment_type_path, class: "rounded-lg py-3 px-5 bg-blue-400 text-white block font-bold" %>
    </div>
  </div>
  
  <div class="mt-4">
    <div class="my-5 flex justify-between items-center gap-5">
      <div class="flex justify-start  border-t border-slate-2 gap-5 pt-5">
        <%= link_to "View all appointments", appointments_path, class: "bg-blue-400 text-white rounded p-4 font-bold" %>
        <%= link_to "View all approval for appointments", approval_appointment_path, class: "bg-blue-400 text-white rounded p-4 font-bold" %>
      </div>
    </div>
    <% if @appointments.scheduled.any? %>
      <h3 class="font-bold text-2xl mb-6 pt-10"><%= t('scheduled_appointment') %></h3>
      <table class="w-full table">
        <thead>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('appointment_code') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('status') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('pet_name') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('breed') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('kind') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('starts') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('ends') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('appointment_type') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('paid') %></th>
        </thead>
        <tbody>
          <% @appointments.scheduled.limit(8).each do |appointment| %>
            <%= render "home/appointments", appointment: appointment %>
          <% end %>
        </tbody>
      </table>
      
    <% end %>

    <% if @appointments.processing.any? %>
      <h3 class="font-bold text-2xl mb-6 mt-10 pt-10 border-t border-slate-2"><%= t('process_appointment') %></h3>
      <table class="w-full table">
        <thead>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('appointment_code') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('status') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('pet_name') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('breed') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('kind') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('starts') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('ends') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('appointment_type') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('paid') %></th>
        </thead>
        <tbody>
          <% @appointments.processing.limit(8).each do |appointment| %> 
            <%= render "home/appointments", appointment: appointment %>
          <% end %>
        </tbody>
      </table>
    <% end %>

    <% if @appointments.finished.any? %>
      <h3 class="font-bold text-2xl mb-6 mt-10 pt-10 border-t border-slate-2"><%= t('finish_appointment') %> </h3>
      <table class="w-full table">
        <thead>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('appointment_code') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('status') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('pet_name') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('breed') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('kind') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('starts') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('ends') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('appointment_type') %></th>
          <th class="border border-slate-300 p-3 text-left bg-slate-50"><%= t('paid') %></th>
        </thead>
        <tbody>
          <% @appointments.finished.limit(8).each do |appointment| %>
            <%= render "home/appointments", appointment: appointment %>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </divmt-4>
</div>