<div id="<%= dom_id payment %>">
  <p class="my5">
    <strong class="block font-medium mb-1"><%= Payment.human_attribute_name(:billing_status) %>:</strong>
    <%= payment.billing_status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= Payment.human_attribute_name(:user_id) %>:</strong>
    <%= payment.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1"><%= Payment.human_attribute_name(:appointment_id) %>:</strong>
    <%= payment.appointment_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this payment", payment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this payment", edit_payment_path(payment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
